<schema adapter="training">
	<element tablename="personnel">
		<field name="objid" primary="true" prefix="P"/>
		<field name="idno" caption="ID No." searchable="true" indexed="true" required="true"/>
		<field name="lastname" caption="Lastname" searchable="true" indexed="true" required="true"/>
		<field name="firstname" caption="Firstname" searchable="true" indexed="true" required="true"/>
		<field name="middlename" caption="Middlename" searchable="true" indexed="true"/>
		<field name="salary" caption="Salary" type="decimal" required="true"/>
		<field name="gender" caption="Gender" required="true"/>
		<field name="nationality_objid" required="true"/>
		<field name="birthdate" caption="Birth Date" />
		<field name="photo" caption="Photo" />
		<field name="civilservice" caption="Civil Service" />
		<field name="hsgrad" type="boolean" caption="High School Grad" />
		<field name="collegegrad" type="boolean" caption="College Grad" />
		<field name="postgrad" type="boolean" caption="Post Graduate" />
		<complex name="nationality" ref="nationality" jointype="many-to-one" required="true">
			<key field="nationality_objid" target="objid" />
		</complex>
		<complex name="trainings" ref="personnel_training" jointype="one-to-many" required="false">
			<key field="objid" target="parent_objid" />
		</complex>
		<complex name="employments" ref="personnel_employment" jointype="one-to-many" required="false">
			<key field="objid" target="parent_objid" />
		</complex>
	</element>
</schema>
