import com.rameses.common.*
import com.rameses.annotations.*
import com.rameses.services.extended.*

public class CheckReportService
{
	@ActiveDB(value='checkissuance_report', em="cashiering")
	def em;

	@ProxyMethod
	public def buildCheckReport(params){
			if(!params.checkdate)
			params.checkdate = ''
			params.searchtext = params.checkdate
			params.bankcode = params.bank.code
			if(!params.createdbyname)
			params.createdbyname = ''
			params.createdbyname += '%'
	
		def list = em.getList(params)

		//rowPadding(list, 50)

		return list
		
	}

	void rowPadding(listRows, rowcount){
				if(listRows.size() < rowcount){
					def start = listRows.size() + 1
					listRows.size().upto(rowcount){
						listRows << [:]
					}
			}

	}



}